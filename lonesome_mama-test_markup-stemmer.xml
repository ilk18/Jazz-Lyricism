<?xml version="1.0" encoding="UTF-8"?>
<song>

    <metadata>
        <title>Lonesome Mama Blues</title>
        <sung-by>Mamie Smith</sung-by>
        <performed-by>n/a</performed-by>
        <written-by>A.W. Brown, Billie Brown, E. Nickel</written-by>
        <publishing-by>1922</publishing-by>
        <moral>loss of love</moral>
    </metadata>

    <verse>
        <line>You hear the whistle blow</line>
        <line>I want you all to know</line>
        <action present="no" who="third party object">
            <line>That train is taking <description possesive="yes" tone="positive" gender="male"
                    who="other">my sweet man</description> away</line>
            <line>From me today</line>
        </action>
    </verse>
<!-- assuming all songs are from perspective of woman singing, no need for specification, present="no" - means woman is not being active in situation. -->

    <verse>
        <line>Don't know the reason why</line>
        <line>I must sigh and cry</line>
        <line>But somethin' 'bout him makes me feel this way</line>
        <line>That's why I say...</line>
    </verse>

    <verse>
        <line>I've got those lonesome mama blues</line>
        <line>
            <cause fault="no love">Since my love has been refused</cause>
        </line>
<!-- fault="no love/abuse/financial problems/etc." -->
        <line>My poor heart's grievin' because he's leavin' me</line>
        <line>But wait and see</line>
        <action present="no" who="third party object">
            <line>Some day he'll come back again</line>
            <line>On that very same old train</line>
        </action>
        <line>I know he'll never find</line>
        <line>Another <description possesive="no" tone="positive" gender="female" who="self">gal so
                good and kind</description></line>
    </verse>


    <verse>
        <action present="yes" who="self" type="indirect">
            <line>Every night upon my knees</line>
<!-- type="indirect" attribute only present if present="yes"? maybe? does who= attribute even need to be present if present="yes" or is it uneccesary? -->
            <line>I pray the Lord above</line>
            <line>"Hear my plea</line>
            <line>Send back to me</line>
            <line>The only man I love!"</line>
        </action>
    </verse>

    <verse>
        <line>Lord, my prayer, now don't refuse</line>
        <line>His sweet love don't let me lose!"</line>
        <line>I'm just a <description possesive="no" tone="negative" gender="female" who="self"
                >lonesome mama</description></line>
        <line>Singin' lonesome mama blues</line>
    </verse>
</song>
